@import "/dist/index.wxss";
page{
	background: #efeef4;
}
.no-border{
	border-bottom: 0px;
}
.padding-bottom{
	padding-bottom: 10px;
}
.color_red{
	color: red;
}
.jd_fix_height{
	height: 20px;
}
.clear{
	clear: both;
}
/*返回首页悬浮按钮*/
.jd_float_btn{
	width: 50px;
	height: 50px;
	background: #1f8ae8;
	border-radius: 50%;
	position: fixed;
	bottom: 20px;
	right: 10px;
	z-index: 999;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}
.jd_float_btn image{
	width: 25px;
	height: 25px;
}
.jd_float_btn text{
	font-size: 10px;
	color: #fff;
	margin-top: -3px;
}