.jd_card_me_top {
  width: 100%;
  height: 160px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: -20px;
}

.jd_card_me_top .jd_card_me_avatar {
  width: 65px;
  height: 65px;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.jd_card_me_top .jd_card_me_name {
  font-size: 15px;
  margin-top: 10px;
  position: relative;
}

.jd_card_me_top .jd_card_me_updata {
  width: 65px;
  height: 12px;
  border-radius: 2em;
  font-size: 12px;
  color: #777;
  border: 1px solid #ebebeb;
  margin-top: 6px;
  display: flex;
  align-items: center;
  padding: 5px;
}

.jd_card_me_top .jd_card_me_updata image {
  width: 14px;
  height: 14px;
  margin-right: 2px;
}

/*我的排版*/

.jd_card_me_top {
  width: 100%;
  position: relative;
  padding-top: 30rpx;
}

.jd_card_me_top .jd_card_me_top_info {
  width: 100%;
  height: 350rpx;
  background: #1f8ae8;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 0 0 10% 10%;
  background: linear-gradient(to bottom, #1f8ae8 0%, #14c2e7 100%);
}

.zan-panel {
  width: 90%;
  margin: 0 auto;
  border-radius: 10px;
}

.zan-panel_two {
  margin-top: 10px;
}

.zan-cell {
  height: 28px;
}

.zan-cell__bd{
  font-size: 16px;
  white-space: pre; 
}

.zan-cell__ft{
  font-size: 13px;
  color: #a9a9ac;  
}
