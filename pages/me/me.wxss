.jd_card_me_top{
	width: 100%;
	height: 175px;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}
.jd_card_me_top .jd_card_me_avatar{
	width: 65px;
	height: 65px;
	border-radius: 50%;
}
.jd_card_me_top .jd_card_me_name{
	font-size: 15px;
	margin-top: 10px;
}
.jd_card_me_top .jd_card_me_updata{
	width: 65px;
	height: 12px;
	border-radius: 2em;
	font-size: 12px;
	color: #777;
	border: 1px solid #ebebeb;
	margin-top: 6px;
	display: flex;
	align-items: center;
	padding: 5px;
}
.jd_card_me_top .jd_card_me_updata image{
	width: 14px;
	height: 14px;
	margin-right: 2px;
}
